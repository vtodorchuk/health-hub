<div>
  <% unless booking.status == 'cancelled' %>
    <div class="flex">
      <% if @booking.online %>
        <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300
    font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700
    dark:focus:ring-blue-800">Join Meeting</button>
      <% end %>

      <% if current_user.has_role?(:doctor) && !booking.doctor_accepted %>
        <%= button_to 'Accept',
                      clinic_user_booking_accept_path(user_id: current_user.id, booking_id: booking.id),
                      class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300
                        font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700
                        dark:focus:ring-blue-800",
                      method: :put
        %>
      <% end %>

      <% if current_user.has_role?(:patient) && !booking.patient_accepted %>
        <%= button_to 'Accept',
                      clinic_user_booking_accept_path(user_id: current_user.id, booking_id: booking.id),
                      class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300
                        font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700
                        dark:focus:ring-blue-800",
                      method: :put
        %>
      <% end %>
    </div>
  <% end %>
</div>