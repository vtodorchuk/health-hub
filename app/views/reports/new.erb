<div>
  <strong><h1>Create Report for <%= @user.decorate.username %></h1></strong>
</div>

<%= form_for(@user.patient_reports.new, url: clinic_user_reports_path(user_id: @user.id), method: :post) do |f| %>
  <div class="mt-5 space-x-5 space-y-5">
    <div>
      <strong><h1> Form </h1></strong>
      <div class="space-y-5">
        <%= f.hidden_field :doctor_id, value: current_user.id %>
        <%= f.hidden_field :patient_id, value: @user.id %>
        <%= f.hidden_field :clinic_id, value: current_clinic.id %>

        <div>
          <%= f.label :illnesses %>
          <%= f.select :illnesses, ['Грип', 'Застуда'] %>
        </div>

        <div>
          <%= f.label :blood_pressure %>
          <%= f.number_field :blood_pressure %>
        </div>

        <div>
          <%= f.label :pulse %>
          <%= f.number_field :pulse %>
        </div>

        <div>
          <%= f.label :temperature %>
          <%= f.number_field :temperature %>
        </div>

        <div>
          <%= f.label :complications %>
          <%= f.check_box :complications %>
        </div>

        <%= f.submit 'Create', class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      </div>
    </div>
  </div>
<% end %>