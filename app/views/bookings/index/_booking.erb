<div class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 p-5 flex-col-2">
  <% if booking.status == 'pending' %>
    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300"><%= booking.status.capitalize %></span>
  <% elsif booking.status == 'completed'%>
    <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300"><%= booking.status.capitalize %></span>
  <% elsif booking.status == 'cancelled'%>
    <span class="bg-gray-100 text-gray-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300"><%= booking.status.capitalize %></span>
  <% elsif booking.status == 'scheduled'%>
    <span class="bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300"><%= booking.status.capitalize %></span>
  <% end %>

  <div class="mt-3 flex flex-col">
    <% if current_user.has_role? :doctor %>
      <span class="text-sm text-gray-500 dark:text-gray-400"><%= booking.service.name %> for
        <%= link_to booking.patient.decorate.username, clinic_user_path(id: booking.patient.id), class: 'font-bold' %>
      </span>
    <% else %>
      <span class="text-sm text-gray-500 dark:text-gray-400"><%= booking.service.name %> with
        <%= link_to booking.doctor.decorate.username, clinic_user_path(id: booking.doctor.id), class: 'font-bold' %>
      </span>
    <% end %>

    <span class="text-sm text-gray-500 dark:text-gray-400"><%= booking.decorate.time %></span>
  </div>

  <div class="flex flex-col-2 mt-2">
    <%= link_to 'Show',
                clinic_user_booking_path(user_id: current_user.id, id: booking.id),
                class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>
</div>