<div>
  <h1 class="font-bold text-4xl">Users#edit</h1>
  <p>Find me in app/views/users/edit.html.erb</p>
</div>

<div class="text-center mt-5">
  <h3>Personal Information</h3>
  <%= form_for(@user, url: user_path(@user.id), method: :put) do |f| %>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar, direct_upload: true %>
    </div>

    <div class="mt-3">
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>

